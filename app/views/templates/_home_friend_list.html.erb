<%= label_tag '', '和我一样' %>
<ul class="user-list">
    <% home_friend_list.each do |friend| %>
        <li><%= link_to (image_tag friend.avatar_url, :class => 'user-avatar'), { :controller => :home, :action => :friend, :id => friend.id }, :title => '' %><span class="avatar-name"><%= link_to friend.name, { :controller => :home, :action => :friend, :id => friend.id } %></span></li>
