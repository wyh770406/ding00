<% pagetitle '我关注的人' %>

<% content_for :user_info_ctrls, 
    generate_userinfo_ctrls( :buttons => [ { :title => '编辑资料', :link => edit_user_path(:id => @user.id) } ], 
        :button_class => 'ctrl-button ctrl-button-orange' )
%>

<ul class="attentions-user-list attentions-operable">
    <% 24.times do |i| -%>
        <%= content_tag(:li, '', :class => 'top') if i % 6 == 0 %>
        <%= content_tag(:li, '', :class => 'sep') unless i % 6 == 0 %>
        <li>
            <% if i < @user.attentions.length %>
                <%= image_tag @user.attentions[i].user.avatar_url, :title => '' %><br />
                <%= link_to @user.attentions[i].user.name, { :controller => :home, :action => :friend, :id => @user.attentions[i].user.id }, :title => '' %>
            <% end %>
        </li>
    <% end %>
    <%= content_tag(:li, '', :class => 'top') %>
</ul>
<div class="attentions-list-more">
    <%= link_to '更多...', 'javascript:void(0)' %>
</div>
